<src:AbstractAppPageUC x:Class="RecommenderAttacksAnalytics.UI.GeneratePromoteItemsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:src="clr-namespace:RecommenderAttacksAnalytics.UI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="numFakeProfiles" HorizontalAlignment="Left" Height="23" Margin="208,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
        <Label Content="Number of Fake Profiles to add:" HorizontalAlignment="Left" Margin="5,29,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numRandomItemsToPromote" HorizontalAlignment="Left" Height="23" Margin="208,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30"/>
        <Label Content="Number of other items to promote:" HorizontalAlignment="Left" Margin="5,59,0,0" VerticalAlignment="Top"/>
        <Button x:Name="GenerateButton" Content="Generate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="208,270,0,0" Click="GenerateButton_Click"/>
        <Label Content="Items to promote:" HorizontalAlignment="Left" Margin="5,90,0,0" VerticalAlignment="Top"/>

    </Grid>
</src:AbstractAppPageUC>
