<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.codetrix.entities.database.DBUser" table="users">
        <id name="userId" type="long">
            <column name="userId" />
            <generator class="assigned" />
        </id>
		<set name="ratedItems" table="ratings" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="userId" not-null="true" />
            </key>
            <many-to-many entity-name="com.codetrix.entities.database.DBItem">
                <column name="itemId" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>